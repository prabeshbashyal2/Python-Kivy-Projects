<MyLayout>
    data: data
    BoxLayout:
        size: (root.width, root.height)
        orientation: "vertical"
        padding: 5

        TextInput:
            id: data
            size_hint: (1, 0.3)
            font_size: 50
            multiline: False

        GridLayout:
            rows: 7
            cols: 5

            Button:
                text: "x³"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.cube()

            Button:
                text: "e"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.button_symbol('e')

            Button:
                text: "π"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.button_symbol('π')

            Button:
                text: "C"
                size_hint: (.2,.2)
                font_size: 25
                on_press: root.clear()

            Button:
                text: "<<"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.delete()

            Button:
                text: "x²"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.square()

            Button:
                text: "1/x"
                size_hint: (.2,.2)
                font_size: 25
                on_press: root.reciprocal()

            Button:
                text: "|x|"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.absolute_value()

            Button:
                text: "exp"
                size_hint: (.2,.2)
                font_size: 25
                on_press: root.exponential()

            Button:
                text: "mod"
                size_hint: (.2,.2)
                font_size: 25
                on_press: root.button_symbol('m')

            Button:
                text: "√x"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.square_root()

            Button:
                text: "("
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.button_symbol('(')

            Button:
                text: ")"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.button_symbol(')')

            Button:
                text: "n!"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.factorial()

            Button:
                text: "÷"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.button_symbol('÷')

            Button:
                text: "x^y"
                size_hint: (.2,.2)
                font_size: 25
                on_press: root.button_symbol('^')

            Button:
                text: "7"
                size_hint: (.2,.2)
                font_size: 30
                background_color: (167/255, 167/255, 167/255, 1)
                on_press: root.button_symbol('7')

            Button:
                text: "8"
                size_hint: (.2,.2)
                font_size: 30
                background_color: (167/255, 167/255, 167/255, 1)
                on_press: root.button_symbol('8')

            Button:
                text: "9"
                size_hint: (.2,.2)
                font_size: 30
                background_color: (167/255, 167/255, 167/255, 1)
                on_press: root.button_symbol('9')

            Button:
                text: "x"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.button_symbol('x')

            Button:
                text: "10^x"
                size_hint: (.2,.2)
                font_size: 24
                on_press: root.power10()

            Button:
                text: "6"
                size_hint: (.2,.2)
                font_size: 30
                background_color: (167/255, 167/255, 167/255, 1)
                on_press: root.button_symbol('6')

            Button:
                text: "5"
                size_hint: (.2,.2)
                font_size: 30
                background_color: (167/255, 167/255, 167/255, 1)
                on_press: root.button_symbol('5')

            Button:
                text: "4"
                size_hint: (.2,.2)
                font_size: 30
                background_color: (167/255, 167/255, 167/255, 1)
                on_press: root.button_symbol('4')

            Button:
                text: "-"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.button_symbol('-')

            Button:
                text: "log"
                size_hint: (.2,.2)
                font_size: 25
                on_press: root.log()

            Button:
                text: "3"
                size_hint: (.2,.2)
                font_size: 30
                background_color: (167/255, 167/255, 167/255, 1)
                on_press: root.button_symbol('3')

            Button:
                text: "2"
                size_hint: (.2,.2)
                font_size: 30
                background_color: (167/255, 167/255, 167/255, 1)
                on_press: root.button_symbol('2')

            Button:
                text: "1"
                size_hint: (.2,.2)
                font_size: 30
                background_color: (167/255, 167/255, 167/255, 1)
                on_press: root.button_symbol('1')

            Button:
                text: "+"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.button_symbol('+')

            Button:
                text: "ln"
                size_hint: (.2,.2)
                font_size: 25
                on_press: root.ln()

            Button:
                text: "+/-"
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.plusminus()

            Button:
                text: "0"
                size_hint: (.2,.2)
                font_size: 30
                background_color: (167/255, 167/255, 167/255, 1)
                on_press: root.button_symbol('0')

            Button:
                text: "."
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.button_symbol('.')

            Button:
                text: "="
                size_hint: (.2,.2)
                font_size: 30
                on_press: root.result()
